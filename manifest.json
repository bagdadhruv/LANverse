{
  "name": "LANverse - Local Event Platform",
  "short_name": "LANverse",
  "description": "Find, join, and host local parties and events with resource pooling",
  "lang": "en-US",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#00eaff",
  "background_color": "#0a0a0a",
  "categories": ["social", "entertainment", "lifestyle"],
  "scope": "/",
  "icons": [
    {
      "src": "assets/logo.webp",
      "sizes": "192x192",
      "type": "image/webp",
      "purpose": "maskable"
    },
    {
      "src": "assets/logo.webp",
      "sizes": "512x512",
      "type": "image/webp",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshot-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Home screen showing featured events"
    },
    {
      "src": "assets/screenshot-events.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Event creation wizard"
    }
  ],
  "shortcuts": [
    {
      "name": "Create Event",
      "short_name": "Create",
      "description": "Create a new event quickly",
      "url": "/create-event.html",
      "icons": [
        {
          "src": "assets/logo.webp",
          "sizes": "96x96",
          "type": "image/webp"
        }
      ]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "View your profile and events",
      "url": "/profile.html",
      "icons": [
        {
          "src": "assets/logo.webp",
          "sizes": "96x96",
          "type": "image/webp"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+lanverse",
      "url": "/?event=%s"
    }
  ]
